<% include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">   <!--Don't forget method POST-->
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="usernameTextField">Contact name</label>
                    <input type="text" class="form-control"
                        id="itemTextField"
                        placeholder="Enter the contact Name"
                        name="username" 
                        value="<%= item.username %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="number" class="form-control"
                    id="phoneTextField"
                    placeholder="000000"
                    name="phone" 
                    value="<%= item.phone %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter an email"
                    name="email" 
                    value="<%= item.email %>"
                    >
                </div>
                <br />
                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>


                <button class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> 
                    Delete
                </button>

                
                
                <a href="/business/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

